<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical"
    tools:context="com.hewuzhe.ui.activity.ProfileActivity">

    <include layout="@layout/toolbar_layout"/>


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorListBg">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:paddingLeft="20px"
                      android:paddingRight="20px">

            <TextView android:id="@+id/tv_name"
                      style="@style/text_35_white"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="20px"
                      android:text="成龙功夫演示直播"/>


            <TextView android:id="@+id/tv_froms"
                      style="@style/text_25_colorLine"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10px"
                      android:text="2015-12-09"/>

            <TextView android:id="@+id/tv_content"
                      style="@style/text_30_white"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10px"
                      android:lineSpacingExtra="2dp"
                      android:text="成家班就是五行里的飞虎队成家班就是五行里的飞虎队成家班就是五行里的飞虎队成家班就是五行里的飞虎队成家班就是五行里的飞虎队"/>

            <LinearLayout android:id="@+id/lay_pics"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">

            </LinearLayout>

            <WebView android:id="@+id/webview"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
            </WebView>

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
