<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hewuzhe.ui.activity.MainActivity">

    <FrameLayout
        android:id="@+id/fram_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/menu_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="2px"
            android:paddingTop="10px">

            <ImageView
                android:layout_width="45px"
                android:layout_height="45px"
                android:src="@mipmap/menu_warrior" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:text="学习"
                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"

            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="2px"
            android:paddingTop="10px">

            <ImageView
                android:layout_width="45px"
                android:layout_height="45px"
                android:src="@mipmap/menu_federal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:text="动态"

                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"

            android:orientation="vertical"
            android:paddingBottom="2px"
            android:paddingTop="10px">

            <ImageView
                android:layout_width="45px"
                android:layout_height="45px"
                android:src="@mipmap/menu_power" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:text="视频"

                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_five"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:orientation="vertical"

            android:paddingBottom="2px"
            android:paddingTop="10px">

            <ImageView
                android:layout_width="45px"
                android:layout_height="45px"
                android:src="@drawable/icon_saishi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:text="资讯"

                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_four"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"

            android:orientation="vertical"
            android:paddingBottom="2px"
            android:paddingTop="10px">

            <ImageView
                android:layout_width="45px"
                android:layout_height="45px"
                android:src="@mipmap/menu_equipment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="5px"
                android:text="装备"
                android:textColor="@color/white" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
