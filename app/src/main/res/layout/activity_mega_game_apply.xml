<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical"
    tools:context="com.hewuzhe.ui.activity.MegaGameApplyActivity">
    <include layout="@layout/toolbar_layout"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="350px">

        <ImageView android:id="@+id/img_video"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:scaleType="fitXY"/>

        <Button android:id="@+id/btn_upload_video"
                style="@style/text_30_white"
                android:layout_width="300px"
                android:layout_height="85px"
                android:layout_centerInParent="true"
                android:background="@drawable/select_yellow"
                android:text="点击上传视频"/>




    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="200px"
                  android:orientation="horizontal">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@color/colorListBg">

            <ImageView android:id="@+id/img_pic"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:scaleType="fitXY"/>

            <ImageView android:id="@+id/img_upload_pic"
                       android:layout_width="85px"
                       android:layout_height="85px"
                       android:layout_centerInParent="true"
                       android:src="@mipmap/icon_add_pic"/>

            <TextView android:id="@+id/tv_tip"
                      style="@style/text_30_white"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/img_upload_pic"
                      android:layout_centerHorizontal="true"
                      android:text="点击上传主图"/>


        </RelativeLayout>


        <EditText android:id="@+id/edt_title"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="10px"
                  style="@style/text_30_white"
                  android:layout_weight="1"
                  android:background="@color/colorListBg"
                  android:gravity="left|top"
                  android:hint="请填写视频的标题"
                  android:padding="18px"
                  android:textColorHint="@color/colorLine">


        </EditText>


    </LinearLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10px"
                    android:layout_weight="1"
        >

        <EditText android:id="@+id/edt_content"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/colorListBg"
                  android:gravity="left|top"
                  style="@style/text_30_white"
                  android:hint="请天下视频的介绍"
                  android:padding="18px"
                  android:textColorHint="@color/colorLine">

        </EditText>


        <TextView style="@style/text_25_colorLine"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:layout_alignParentRight="true"
                  android:layout_marginBottom="15px"
                  android:layout_marginRight="10px"
                  android:text="字数在150字以内"/>


    </RelativeLayout>


</LinearLayout>
