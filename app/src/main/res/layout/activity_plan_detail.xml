<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical"
    tools:context="com.hewuzhe.ui.activity.PlanDetailActivity">

    <include layout="@layout/toolbar_layout"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="8px"
                      android:background="@color/colorListBg"
                      android:orientation="vertical"
                      android:paddingRight="20px">

            <TextView android:id="@+id/tv_name"
                      style="@style/text_35_white"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="20px"
                      android:layout_marginTop="20px"
                      android:gravity="center_vertical"
                      android:text=""/>


            <TextView android:id="@+id/tv_time"
                      style="@style/text_25_colorLine"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="20px"
                      android:layout_marginTop="10px"

                      android:gravity="center_vertical"
                      android:text=""/>

            <TextView android:id="@+id/tv_content"
                      style="@style/text_30_white"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="20px"

                      android:layout_marginTop="15px"
                      android:lineSpacingExtra="2dp"
                      android:text=""/>


            <TextView android:layout_width="match_parent"
                      android:layout_height="10px"
                      android:background="@color/colorBg"/>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="20px"
                          android:layout_marginTop="10px"
                          android:background="@color/colorListBg"
                          android:orientation="vertical">


                <TextView style="@style/text_30_white"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="10px"
                          android:text="文章图片"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="200px"
                    android:layout_marginBottom="10px"
                    android:layout_marginTop="20px"
                    >

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>