<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/colorBg"
    android:orientation="vertical"
    tools:context="com.hewuzhe.ui.activity.PlanSelectActivity">

    <include layout="@layout/toolbar_layout"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10px"
                  android:background="@color/colorListBg"
                  android:orientation="vertical"
                  android:paddingBottom="60px"
        >

        <TextView android:id="@+id/tv_51"
                  style="@style/text_35_white"
                  android:layout_width="match_parent"
                  android:layout_height="85px"
                  android:layout_marginLeft="40px"
                  android:gravity="center_vertical"
                  android:text="周计划"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="2px"
                  android:layout_marginLeft="30px"
                  android:background="@color/colorBg"/>

        <TextView android:id="@+id/tv_50"
                  style="@style/text_35_white"
                  android:layout_width="match_parent"

                  android:layout_height="85px"
                  android:layout_marginLeft="40px"
                  android:gravity="center_vertical"
                  android:text="月计划"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="2px"
                  android:layout_marginLeft="30px"
                  android:background="@color/colorBg"/>

        <TextView android:id="@+id/tv_49"
                  style="@style/text_35_white"
                  android:layout_width="match_parent"
                  android:layout_height="85px"

                  android:layout_marginLeft="40px"
                  android:gravity="center_vertical"
                  android:text="季计划"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="2px"
                  android:layout_marginLeft="30px"
                  android:background="@color/colorBg"/>

        <TextView android:id="@+id/tv_48"
                  style="@style/text_35_white"
                  android:layout_width="match_parent"
                  android:layout_height="85px"
                  android:layout_marginLeft="40px"
                  android:gravity="center_vertical"
                  android:text="年计划"/>


    </LinearLayout>

</LinearLayout>
