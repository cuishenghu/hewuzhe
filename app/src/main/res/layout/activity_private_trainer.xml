<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hewuzhe.view.MyCommonTitle
        android:id="@+id/aci_mytitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBg"
        android:orientation="vertical">

        <include layout="@layout/header_private_trainer" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorListBg"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/ll_video"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_video"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="视频"
                        android:textColor="@color/colorYellow"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:background="@color/colorBg" />

                <RelativeLayout
                    android:id="@+id/ll_photo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="相册"
                        android:textColor="@drawable/tab_font_color"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:background="@color/colorBg" />

                <RelativeLayout
                    android:id="@+id/ll_focused"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_focused"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="关注"
                        android:textColor="@drawable/tab_font_color"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:background="@color/colorBg" />

                <RelativeLayout
                    android:id="@+id/ll_fans"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_fans"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/tab_order_bg"
                        android:gravity="center"
                        android:text="粉丝"
                        android:textColor="@drawable/tab_font_color"
                        android:textSize="16sp" />

                </RelativeLayout>
            </LinearLayout>

        <GridView
            android:id="@+id/list_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:numColumns="3"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"/>

    </LinearLayout>
</LinearLayout>