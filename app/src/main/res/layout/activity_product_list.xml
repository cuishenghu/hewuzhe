<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hwz_background"
    android:orientation="vertical" >

    <include layout="@layout/toolbar_layout"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginBottom="10px"
        android:layout_marginTop="10px"
        android:background="@color/colorListBg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/product_list_search"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_marginLeft="20px"
            android:padding="18px"
            android:src="@mipmap/icon_search"/>

        <EditText android:id="@+id/edt_search_content"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:layout_marginLeft="20px"
            android:background="@null"
            android:hint="搜索商品名称"
            android:inputType="text"
            android:textColor="@color/colorLine"
            android:textColorHint="@color/colorLine"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/title_daohang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hwz_bg_black"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/salenum_title"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/prolist_xiaoliang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="4dp"
                android:text="@string/prolist_xiaoliang"
                android:textColor="@color/hwz_font_white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/prolist_xiaoliang"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/salenum_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/prolisttop" />

                <ImageView
                    android:id="@+id/salenum_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/prolistbottom" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/price_title"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/prolist_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="4dp"
                android:text="@string/prolist_price"
                android:textColor="@color/hwz_font_white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/prolist_price"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/price_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/prolisttop" />

                <ImageView
                    android:id="@+id/price_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/prolistbottom" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/comment_title"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/prolist_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="4dp"
                android:text="@string/prolist_good"
                android:textColor="@color/hwz_font_white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/prolist_good"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/comment_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/prolisttop" />

                <ImageView
                    android:id="@+id/comment_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/prolistbottom" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/new_title"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/prolist_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="4dp"
                android:text="@string/prolist_new"
                android:textColor="@color/hwz_font_white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/prolist_new"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/new_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/prolisttop" />

                <ImageView
                    android:id="@+id/new_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/prolistbottom" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>



            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </android.support.v7.widget.RecyclerView>




</LinearLayout>