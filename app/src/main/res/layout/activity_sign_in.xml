<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical"
    tools:context=".ui.activity.SignInActivity">


    <ImageView
        android:id="@+id/img_title"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:layout_marginTop="120px"
        android:scaleType="fitXY"
        android:src="@mipmap/img_login_title"
        android:visibility="visible">

    </ImageView>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="100px"
                  android:background="@color/colorListBg"
                  android:orientation="vertical"
                  android:paddingLeft="30px">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="90px"
                      android:background="@color/colorListBg"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">

            <ImageView android:layout_width="50px"
                       android:layout_height="50px"
                       android:src="@mipmap/icon_username"/>

            <EditText android:id="@+id/edt_username"
                      style="@style/text_35_white"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@null"
                      android:gravity="center_vertical"
                      android:hint="请输入手机号"
                      android:paddingLeft="20px"
                      android:textColorHint="@color/colorLine"/>

        </LinearLayout>

        <TextView android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/colorBg"/>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="90px"
                      android:background="@color/colorListBg"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">

            <ImageView android:layout_width="50px"
                       android:layout_height="50px"
                       android:src="@mipmap/icon_pwd"/>

            <EditText android:id="@+id/edt_pwd"
                      style="@style/text_35_white"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:background="@null"
                      android:gravity="center_vertical"
                      android:hint="请输入密码"
                      android:inputType="textPassword"
                      android:paddingLeft="20px"
                      android:textColorHint="@color/colorLine">

                <requestFocus/>
            </EditText>

            <TextView
                android:id="@+id/tv_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20px"
                android:background="@drawable/bg_black"
                android:gravity="center"
                android:padding="12px"
                android:text="忘记密码"
                android:textColor="@android:color/white"
                android:textSize="30px"/>


        </LinearLayout>


    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="30px"
                  android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:background="@color/colorListBg"
            android:gravity="center"
            android:paddingBottom="20px"
            android:paddingLeft="50px"
            android:paddingRight="50px"
            android:paddingTop="20px"
            android:text="新用户注册"
            android:textColor="@android:color/white"
            android:textSize="32px"/>

        <TextView
            android:id="@+id/tv_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorListBg"
            android:gravity="center"
            android:padding="20px"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="32px"/>


    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <CheckBox
        android:id="@+id/cb_remember_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="5px"
        android:checked="true"
        android:text="记住密码"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/youkelogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:layout_marginRight="5dp"
        android:text="游客登录"
        android:textColor="@color/white"
        android:textSize="15sp"/>
</LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="40px"
                  android:gravity="center_vertical"
                  android:orientation="horizontal"
                  android:padding="60px"
                  android:visibility="visible"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/colorLine"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" 你可以使用第三方进行登录 "
            android:textColor="@color/colorLine"
            android:textSize="28px"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/colorLine"
            />


    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="50px"
                  android:orientation="horizontal"
                  android:visibility="visible">


        <LinearLayout
            android:id="@+id/lay_qq"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView android:layout_width="70px"
                       android:layout_height="70px"
                       android:scaleType="fitXY"
                       android:src="@mipmap/icon_qq"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10px"
                      android:text="QQ"
                      android:textColor="@color/colorLine"
                      android:textSize="32px"/>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/lay_wx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView android:layout_width="70px"
                       android:layout_height="60px"
                       android:layout_marginBottom="5px"
                       android:layout_marginTop="5px"
                       android:scaleType="fitXY"
                       android:src="@mipmap/icon_wx"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10px"
                      android:text="微信"
                      android:textColor="@color/colorLine"
                      android:textSize="32px"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
