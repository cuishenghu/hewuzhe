<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical"
    tools:context="com.hewuzhe.ui.activity.ProfileActivity">

    <include layout="@layout/toolbar_layout"/>


    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="200px"
                          android:layout_marginBottom="2px"
                          android:background="@color/colorListBg"
                          android:gravity="center"
                          android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="132px"
                    android:layout_height="132px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20px"
                    android:src="@mipmap/img_avatar"
                    android:textSize="22px"
                    />


            </LinearLayout>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="@color/colorListBg"
                          android:orientation="vertical">


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="80px"
                              android:gravity="center_vertical"
                              android:orientation="horizontal"
                              android:paddingLeft="20px">

                    <TextView android:layout_width="110px"
                              android:layout_height="wrap_content"
                              android:text="昵称："
                              android:textColor="@color/white"
                              android:textSize="30px"/>

                    <EditText
                        android:id="@+id/edt_username"
                        style="@style/text_30_white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请输入您的昵称"
                        android:textColorHint="@color/colorLine"/>

                </LinearLayout>
                <TextView android:layout_width="match_parent"
                          android:layout_height="2px"
                          android:background="@color/colorBg"/>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="80px"
                              android:gravity="center_vertical"
                              android:orientation="horizontal"
                              android:paddingLeft="20px">

                    <TextView android:layout_width="110px"
                              android:layout_height="wrap_content"
                              android:text="ID："
                              android:textColor="@color/white"
                              android:textSize="30px"/>

                    <TextView android:id="@+id/tv_id"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:padding="5px"
                              android:text="1212313"
                              android:textColor="@color/white"
                              android:textSize="28px"/>


                </LinearLayout>

                <TextView android:layout_width="match_parent"
                          android:layout_height="2px"
                          android:background="@color/colorBg"/>


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="80px"
                              android:gravity="center_vertical"
                              android:orientation="horizontal"
                              android:paddingLeft="20px">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="性别："
                              android:textColor="@color/white"
                              android:textSize="30px"/>

                    <LinearLayout android:id="@+id/lay_male"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal">w
                        <CheckBox
                            android:id="@+id/cb_male"
                            android:layout_width="30px"
                            android:layout_height="30px"
                            android:layout_marginLeft="18px"
                            android:background="@drawable/icon_cb_selector"
                            android:button="@null"
                            android:checked="true"
                            />


                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginLeft="18px"
                                  android:text="男"
                                  android:textColor="@color/colorLine"
                                  android:textSize="30px"/>
                    </LinearLayout>

                    <LinearLayout android:id="@+id/lay_female"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal">w

                        <CheckBox
                            android:id="@+id/cb_female"
                            android:layout_width="30px"
                            android:layout_height="30px"
                            android:layout_marginLeft="38px"
                            android:background="@drawable/icon_cb_selector"
                            android:button="@null"
                            />


                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginLeft="18px"
                                  android:text="女"
                                  android:textColor="@color/colorLine"
                                  android:textSize="30px"/>
                    </LinearLayout>

                </LinearLayout>


                <TextView android:layout_width="match_parent"
                          android:layout_height="2px"
                          android:background="@color/colorBg"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="80px"
                              android:gravity="center_vertical"
                              android:orientation="horizontal"
                              android:paddingLeft="20px">

                    <TextView android:layout_width="120px"
                              android:layout_height="wrap_content"
                              android:gravity="center"
                              android:text="身高："
                              android:textColor="@color/white"
                              android:textSize="30px"/>

                    <LinearLayout android:id="@+id/lay_height"
                                  android:layout_width="130px"
                                  android:layout_height="60px"
                                  android:layout_marginLeft="20px"
                                  android:background="@color/colorBg"
                                  android:gravity="center"
                                  android:orientation="horizontal">
                        <EditText android:id="@+id/edt_height"
                                  style="@style/text_30_white"
                                  android:layout_width="wrap_content"
                                  android:layout_height="match_parent"
                                  android:background="@null"
                                  android:gravity="center_vertical"
                                  android:inputType="number"
                                  android:text="0"
                            />
                        <TextView style="@style/text_30_white"
                                  android:layout_width="wrap_content"
                                  android:layout_height="match_parent"
                                  android:gravity="center_vertical"
                                  android:text="cm"
                            />


                    </LinearLayout>


                    <TextView android:layout_width="150px"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="20px"
                              android:gravity="center"
                              android:text="体重："
                              android:textColor="@color/white"

                              android:textSize="30px"/>


                    <LinearLayout android:id="@+id/lay_weight"
                                  android:layout_width="130px"
                                  android:layout_height="60px"
                                  android:layout_marginLeft="20px"

                                  android:background="@color/colorBg"
                                  android:gravity="center"
                                  android:orientation="horizontal">
                        <EditText android:id="@+id/edt_weight"
                                  style="@style/text_30_white"
                                  android:layout_width="wrap_content"
                                  android:layout_height="match_parent"
                                  android:background="@null"
                                  android:gravity="center_vertical"
                                  android:inputType="number"
                                  android:text="0"
                            />
                        <TextView style="@style/text_30_white"
                                  android:layout_width="wrap_content"
                                  android:layout_height="match_parent"

                                  android:gravity="center_vertical"
                                  android:text="kg"
                            />


                    </LinearLayout>


                </LinearLayout>


                <TextView android:layout_width="match_parent"
                          android:layout_height="2px"
                          android:background="@color/colorBg"/>


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="80px"
                              android:gravity="center_vertical"
                              android:orientation="horizontal"
                              android:paddingLeft="20px">

                    <TextView android:layout_width="120px"
                              android:layout_height="wrap_content"
                              android:gravity="center"
                              android:text="年龄："

                              android:textColor="@color/white"

                              android:textSize="30px"/>

                    <LinearLayout android:id="@+id/lay_age"
                                  android:layout_width="130px"
                                  android:layout_height="60px"
                                  android:layout_marginLeft="20px"

                                  android:background="@color/colorBg"
                                  android:gravity="center"
                                  android:orientation="horizontal">
                        <TextView android:id="@+id/edt_age"
                                  style="@style/text_30_white"
                                  android:layout_width="wrap_content"
                                  android:layout_height="match_parent"
                                  android:background="@null"
                                  android:editable="false"
                                  android:focusable="false"
                                  android:gravity="center_vertical"
                                  android:inputType="number"
                                  android:text="0"
                            />
                        <TextView style="@style/text_30_white"
                                  android:layout_width="wrap_content"
                                  android:layout_height="match_parent"
                                  android:gravity="center_vertical"

                                  android:text="岁"
                            />


                    </LinearLayout>


                    <TextView android:layout_width="150px"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="20px"
                              android:gravity="center"
                              android:text="习武时间："
                              android:textColor="@color/white"

                              android:textSize="30px"/>

                    <LinearLayout android:id="@+id/lay_long"
                                  android:layout_width="130px"
                                  android:layout_height="60px"
                                  android:layout_marginLeft="20px"
                                  android:background="@color/colorBg"
                                  android:gravity="center"
                                  android:orientation="horizontal">

                        <EditText android:id="@+id/edt_long"
                                  style="@style/text_30_white"
                                  android:layout_width="wrap_content"
                                  android:layout_height="match_parent"
                                  android:background="@null"
                                  android:gravity="center_vertical"
                                  android:inputType="number"
                                  android:text="0"
                            />
                        <TextView style="@style/text_30_white"
                                  android:layout_width="wrap_content"
                                  android:layout_height="match_parent"
                                  android:gravity="center_vertical"
                                  android:text="年"
                            />

                    </LinearLayout>


                </LinearLayout>


                <TextView android:layout_width="match_parent"
                          android:layout_height="2px"
                          android:background="@color/colorBg"/>


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="80px"
                              android:gravity="center_vertical"
                              android:orientation="horizontal"
                              android:paddingLeft="20px">

                    <TextView android:layout_width="150px"
                              android:layout_height="wrap_content"
                              android:gravity="center"
                              android:text="所在地："
                              android:textColor="@color/white"
                              android:textSize="30px"/>

                    <FrameLayout android:layout_width="wrap_content"
                                 android:layout_height="wrap_content">
                        <TextView android:id="@+id/tv_province"
                                  android:layout_width="100px"
                                  android:layout_height="60px"
                                  android:layout_marginLeft="20px"
                                  android:background="@color/colorBg"
                                  android:gravity="center"

                                  android:textColor="@color/white"
                            />

                        <ImageView android:layout_width="25px"
                                   android:layout_height="25px"
                                   android:layout_gravity="bottom|right"
                                   android:src="@mipmap/icon_bottom_select"/>


                    </FrameLayout>


                    <FrameLayout android:layout_width="wrap_content"
                                 android:layout_height="wrap_content">
                        <TextView android:id="@+id/tv_city"
                                  android:layout_width="100px"
                                  android:layout_height="60px"
                                  android:layout_marginLeft="2px"
                                  android:background="@color/colorBg"
                                  android:gravity="center"

                                  android:textColor="@color/white"

                            />
                        <ImageView android:layout_width="25px"
                                   android:layout_height="25px"
                                   android:layout_gravity="bottom|right"
                                   android:src="@mipmap/icon_bottom_select"/>


                    </FrameLayout>

                    <FrameLayout android:layout_width="wrap_content"
                                 android:layout_height="wrap_content">
                        <TextView android:id="@+id/tv_district"
                                  android:layout_width="100px"
                                  android:layout_height="60px"
                                  android:layout_marginLeft="2px"
                                  android:background="@color/colorBg"
                                  android:gravity="center"
                                  android:textColor="@color/white"


                            />
                        <ImageView android:layout_width="25px"
                                   android:layout_height="25px"
                                   android:layout_gravity="bottom|right"
                                   android:src="@mipmap/icon_bottom_select"/>


                    </FrameLayout>


                </LinearLayout>


                <TextView android:layout_width="match_parent"
                          android:layout_height="2px"
                          android:layout_marginBottom="10px"
                          android:layout_marginTop="10px"
                          android:background="@color/colorBg"/>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:paddingLeft="20px">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="top"
                              android:text="个人简介："
                              android:textColor="@color/white"
                              android:textSize="30px"/>

                    <EditText android:id="@+id/edt_desc"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginRight="20px"
                              android:background="@color/colorBg"
                              android:gravity="top"
                              android:hint="请输入您的个人简介"
                              android:minLines="5"

                              android:padding="10px"
                              android:textColor="@color/white"
                              android:textColorHint="@color/colorLine"/>


                </LinearLayout>


                <TextView android:layout_width="match_parent"
                          android:layout_height="2px"
                          android:layout_marginTop="18px"
                          android:background="@color/colorLine"/>

                <TextView android:id="@+id/tv_save"
                          android:layout_width="match_parent"
                          android:layout_height="80px"
                          android:layout_marginBottom="30px"
                          android:layout_marginLeft="20px"
                          android:layout_marginRight="20px"
                          android:layout_marginTop="20px"
                          android:layout_weight="1"
                          android:background="@drawable/select_yellow"
                          android:gravity="center"
                          android:text="确认"
                          android:textColor="@color/white"
                          android:textSize="35px"/>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
