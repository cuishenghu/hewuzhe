<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical"
    tools:context="com
    .hewuzhe.ui.activity.FriendProfileSettingsActivity">
    <include layout="@layout/toolbar_layout"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/colorBg"
                  android:orientation="vertical">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@color/colorListBg"
                      android:orientation="vertical"
                      android:paddingTop="10px">


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="160px"
                          android:gravity="center_vertical"
                          android:orientation="horizontal">

                <ImageView android:id="@+id/img_avatar"
                           android:layout_width="120px"
                           android:layout_height="120px"
                           android:layout_marginLeft="30px"
                           android:src="@mipmap/img_avatar"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:gravity="center_vertical"
                              android:orientation="vertical">

                    <TextView android:id="@+id/tv_username"
                              style="@style/text_30_yellow"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="10px"
                              android:text="成龙"/>

                    <TextView android:id="@+id/tv_info"
                              style="@style/text_27_white"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="10px"
                              android:layout_marginTop="5px"
                              android:text="男 26岁 山东 临沂 兰山区"/>

                </LinearLayout>
            </LinearLayout>



            <TextView android:layout_width="match_parent"
                      android:layout_height="2px"
                      android:background="@color/colorBg"

                      android:paddingLeft="30px"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="85px"
                          android:gravity="center_vertical"
                          android:id="@+id/lay_friends_condition"
                          android:orientation="horizontal"
                          android:paddingLeft="30px"
                          android:paddingRight="10px">

                <TextView style="@style/text_32_white"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="个人动态"/>

                <TextView android:id="@+id/tv_remark"
                          style="@style/text_30_yellow"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:background="@null"
                          android:gravity="right"
                          android:text=""/>

                <ImageView android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:padding="12dp"
                           android:src="@mipmap/icon_arrow_right"/>

            </LinearLayout>


            <TextView android:layout_width="match_parent"
                      android:layout_height="2px"
                      android:background="@color/colorBg"

                      android:paddingLeft="30px"/>

            <LinearLayout android:id="@+id/lay_report"
                          android:layout_width="match_parent"
                          android:layout_height="85px"
                          android:gravity="center_vertical"
                          android:orientation="horizontal"

                          android:paddingLeft="30px"
                          android:paddingRight="10px">

                <TextView style="@style/text_32_white"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="举报"/>

                <TextView android:id="@+id/tv_weight"
                          style="@style/text_27_colorLine"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:gravity="right"
                          android:text=""/>

                <ImageView android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:padding="12dp"
                           android:src="@mipmap/icon_arrow_right"/>


            </LinearLayout>

            <TextView android:layout_width="match_parent"
                      android:layout_height="2px"
                      android:background="@color/colorBg"

                      android:paddingLeft="30px"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="85px"
                          android:gravity="center_vertical"
                          android:orientation="horizontal"
                          android:paddingLeft="30px"
                          android:paddingRight="30px">

                <TextView style="@style/text_32_white"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="屏蔽消息"/>

                <TextView android:id="@+id/tv_time"
                          style="@style/text_27_colorLine"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:gravity="right"
                          android:text=""/>
                <com.hewuzhe.ui.widget.SwitchView
                    android:id="@+id/switch_msg"
                    android:layout_width="80px"
                    android:layout_height="50px"
                    android:layout_centerInParent="true"
                    />


            </LinearLayout>




        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="200px"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">

            <Button android:id="@+id/btn_follow"
                    style="@style/text_35_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:background="@drawable/select_yellow"
                    android:clickable="true"
                    android:text="关注好友"/>

        </LinearLayout>
    </LinearLayout>


    <!---->
</LinearLayout>
