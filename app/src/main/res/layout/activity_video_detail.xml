<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorBg"
    tools:context="com.hewuzhe.ui.fragment.OneFragment">


    <include layout="@layout/toolbar_layout"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <com.hewuzhe.ui.widget.VideoControllerView
            android:id="@+id/video_controller"
            android:layout_width="match_parent"
            android:layout_height="200dp">
        </com.hewuzhe.ui.widget.VideoControllerView>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/lay_other"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            >

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">


                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="130px"
                                android:layout_marginTop="10px"
                                android:background="@color/colorListBg"
                                android:paddingBottom="15px"
                                android:paddingLeft="20px"
                                android:paddingRight="20px"
                                android:paddingTop="15px">

                    <com.github.siyamed.shapeimageview.CircularImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="85px"
                        android:layout_height="85px"
                        android:src="@mipmap/img_avatar"/>

                    <TextView android:id="@+id/tv_username"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="18px"
                              android:layout_toRightOf="@id/img_avatar"
                              android:text="成龙"
                              android:textColor="@color/white"
                              android:textSize="30px"/>


                    <TextView android:id="@+id/tv_times"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_alignParentBottom="true"
                              android:layout_marginBottom="15px"
                              android:layout_marginLeft="28px"
                              android:layout_marginTop="3px"
                              android:layout_toRightOf="@id/img_avatar"
                              android:text="发布于..."
                              android:textColor="@color/white"
                              android:textSize="22px"/>





                    <LinearLayout android:id="@+id/lay_collect"
                                  android:layout_width="wrap_content"
                                  android:layout_height="match_parent"
                                  android:layout_marginBottom="20px"
                                  android:layout_marginLeft="20px"
                                  android:layout_alignParentRight="true"
                                  android:gravity="center_horizontal"
                                  android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_collect"
                            android:layout_width="35px"
                            android:layout_height="35px"
                            android:src="@mipmap/icon_collect"/>

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginTop="8px"
                                  android:layout_weight="1"
                                  android:gravity="bottom"
                                  android:text="收藏"
                                  android:textColor="@color/white"
                                  android:textSize="25px"/>


                    </LinearLayout>

                    <LinearLayout android:id="@+id/lay_praise"
                                  android:layout_width="wrap_content"
                                  android:layout_height="match_parent"
                                  android:layout_marginBottom="20px"
                                  android:layout_marginLeft="20px"
                                  android:layout_toLeftOf="@id/lay_collect"
                                  android:gravity="center_horizontal"
                                  android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_praise"
                            android:layout_width="35px"
                            android:layout_height="35px"
                            android:src="@mipmap/icon_praise_2"/>

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginTop="8px"
                                  android:layout_weight="1"
                                  android:gravity="bottom"
                                  android:text="点赞"
                                  android:textColor="@color/white"
                                  android:textSize="25px"/>


                    </LinearLayout>


                </RelativeLayout>

                <TextView android:id="@+id/tv_title"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="1dp"
                          android:background="@color/colorListBg"
                          android:padding="20px"
                          android:text="名字：..."
                          android:textColor="@color/white"
                          android:textSize="30px"/>


                <TextView android:id="@+id/tv_desc"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="@color/colorListBg"
                          android:padding="20px"
                          android:text="简介：..."
                          android:textColor="@color/white"
                          android:textSize="25px"/>




                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="80px"
                              android:layout_marginTop="10px"
                              android:background="@color/colorListBg"
                              android:gravity="center_vertical"
                              android:paddingLeft="20px"
                              android:paddingRight="20px">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:text="用户评论"
                              android:textColor="@color/white"
                              android:textSize="30px"/>

                    <TextView android:layout_width="2dp"
                              android:layout_height="match_parent"
                              android:layout_marginBottom="15px"
                              android:layout_marginTop="15px"
                              android:background="@color/colorBg"/>

                    <TextView android:layout_width="wrap_content"
                              android:id="@+id/tv_comment_count"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="10px"
                              android:text="共100条"
                              android:textColor="@color/white"
                              android:textSize="30px"/>


                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
