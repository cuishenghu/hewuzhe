<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/hwz_bg_black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/hwz_bg_black"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/chat_user_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/chat_u_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/img_avatar" />

            <TextView
                android:id="@+id/chat_u_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="NickName"
                android:textColor="@color/colorLine"
                android:textSize="10sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/pt_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/img_avatar" />

        <TextView
            android:id="@+id/chat_title"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:maxLines="2"
            android:layout_marginLeft="5dp"
            android:text="data"
            android:textColor="@color/colorLine"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/chat_dongtai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="1dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

            <ImageView android:id="@+id/img_praise"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/icon_praise_gray"/>
            <TextView
                android:id="@+id/chat_f_count"
                style="@style/text_25_colorLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="100"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
            <ImageView android:id="@+id/img_collect"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="14dp"
                android:src="@mipmap/icon_comment"/>

            <TextView
                android:id="@+id/chat_c_count"
                style="@style/text_25_colorLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="100"
                />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/hwz_background"></View>
</LinearLayout>