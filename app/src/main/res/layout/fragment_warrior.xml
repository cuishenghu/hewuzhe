<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorBg"
              android:orientation="vertical"
              tools:context="com.hewuzhe.ui.fragment.WarriorFragment">

    <include layout="@layout/toolbar_layout"/>
    <!-- TODO: Update blank fragment layout -->


    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">


            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="240px"
                         android:background="@color/colorBg">

                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="right"
                              android:layout_marginTop="20px"
                              android:gravity="center_vertical"
                              android:orientation="horizontal">

                    <ImageView android:id="@+id/img_weather"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@mipmap/weather"/>


                    <TextView android:id="@+id/tv_air_quality"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:padding="18px"
                              android:text=""
                              android:textColor="@color/white"
                              android:textSize="22px"/>

                </LinearLayout>

                <TextView android:id="@+id/tv_address"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:padding="18px"
                          android:text="山东：临沂"
                          android:textColor="@color/white"
                          android:textSize="22px"/>

                <TextView android:id="@+id/tv_temperature"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="25px"
                          android:padding="18px"
                          android:text="-3C"
                          android:textColor="@color/white"/>

                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="122px"
                    android:layout_height="122px"
                    android:layout_gravity="center"
                    android:src="@mipmap/img_avatar"
                    android:textSize="22px"
                    />


                <TextView android:id="@+id/tv_username"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_marginTop="75px"
                          android:padding="18px"
                          android:text=""
                          android:textColor="@color/colorYellow"
                          android:textSize="25px"/>


                <TextView android:id="@+id/tv_id"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_marginTop="105px"
                          android:padding="18px"
                          android:text="ID: 122345667890"
                          android:textColor="@color/white"
                          android:textSize="22px"/>

                <LinearLayout android:id="@+id/lay_level"
                              android:layout_width="123px"
                              android:layout_height="77px"
                              android:layout_gravity="bottom"
                              android:layout_marginBottom="22px"
                              android:layout_marginLeft="22px"
                              android:background="@mipmap/img_bg_2"
                              android:gravity="center_horizontal"
                              android:orientation="vertical">

                    <TextView android:id="@+id/tv_level"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="18px"
                              android:text="lv1"
                              android:textColor="@color/white"
                              android:textSize="22px"/>

                    <TextView android:id="@+id/tv_level_name"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="非会员"
                              android:textColor="@color/colorYellow"
                              android:textSize="20px"/>


                </LinearLayout>

                <LinearLayout android:id="@+id/lay_integral_one"
                              android:layout_width="123px"
                              android:layout_height="77px"
                              android:layout_gravity="bottom|right"
                              android:layout_marginBottom="22px"
                              android:layout_marginRight="22px"
                              android:background="@mipmap/img_bg_2"
                              android:gravity="center_horizontal"
                              android:orientation="vertical">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="18px"
                              android:text="积分"

                              android:textColor="@color/white"
                              android:textSize="22px"/>

                    <TextView android:id="@+id/tv_integral"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="1000"
                              android:textColor="@color/colorYellow"

                              android:textSize="20px"/>


                </LinearLayout>

            </FrameLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="85px"
                          android:background="@color/colorListBg"
                          android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_fly_dream"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="放飞梦想"
                    android:textColor="@color/white"
                    android:textSize="25px"/>

                <TextView android:layout_width="1px"
                          android:layout_height="match_parent"
                          android:layout_marginBottom="8px"
                          android:layout_marginTop="8px"
                          android:background="@color/colorLine"/>


                <TextView android:id="@+id/tv_study_online"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"

                          android:layout_weight="1"
                          android:gravity="center"
                          android:text="在线学习"
                          android:textColor="@color/white"
                          android:textSize="25px"/>
                <TextView android:layout_width="1px"
                          android:layout_height="match_parent"
                          android:layout_marginBottom="8px"
                          android:layout_marginTop="8px"
                          android:background="@color/colorLine"/>


                <TextView android:id="@+id/tv_dojo_recommend"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_weight="1"

                          android:gravity="center"
                          android:text="武馆推荐"
                          android:textColor="@color/white"
                          android:textSize="25px"/>
                <TextView android:layout_width="1px"
                          android:layout_height="match_parent"
                          android:layout_marginBottom="8px"
                          android:layout_marginTop="8px"
                          android:background="@color/colorLine"/>

                <TextView android:id="@+id/tv_my_collections"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_weight="1"
                          android:gravity="center"

                          android:text="我的收藏"
                          android:textColor="@color/white"
                          android:textSize="25px"/>


            </LinearLayout>

            <FrameLayout
                android:id="@+id/lay_index_img"
                android:layout_width="match_parent" android:layout_height="112px">
                <ImageView android:id="@+id/img_index"
                           android:layout_width="match_parent"
                           android:layout_height="102px"
                           android:layout_marginTop="8px"
                           android:scaleType="fitXY"
                           android:src="@mipmap/img_warrior_bg"/>
                <ImageView android:id="@+id/img_index_del"
                           android:layout_width="48px"
                           android:layout_height="48px"
                           android:layout_gravity="center_vertical|right"
                           android:layout_marginRight="15px"
                           android:padding="8px"
                           android:src="@mipmap/icon_del"
                           android:visibility="gone"/>
            </FrameLayout>

            <LinearLayout android:id="@+id/lay_live"
                          android:layout_width="match_parent"
                          android:layout_height="80px"

                          android:layout_marginTop="8px"
                          android:background="@color/colorListBg"
                          android:gravity="center_vertical"
                >

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:gravity="center"
                          android:padding="12dp"
                          android:text="视频直播"
                          android:textColor="@color/white"
                          android:textSize="26px"/>

                <ImageView android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:padding="12dp"
                           android:src="@mipmap/icon_arrow_right"/>


            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="8px"
                          android:background="@color/colorListBg"
                          android:orientation="vertical">


                <LinearLayout android:id="@+id/lay_train"
                              android:layout_width="match_parent"
                              android:layout_height="80px"
                              android:background="@color/colorListBg"
                              android:gravity="center_vertical"
                    >

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:gravity="center"
                              android:padding="12dp"
                              android:text="训练计划"
                              android:textColor="@color/white"

                              android:textSize="26px"/>

                    <ImageView android:layout_width="40dp"
                               android:layout_height="40dp"
                               android:padding="12dp"
                               android:src="@mipmap/icon_arrow_right"/>


                </LinearLayout>

                <TextView android:layout_width="match_parent"
                          android:layout_height="1dp"
                          android:layout_marginLeft="12dp"
                          android:background="@color/colorBg"/>


                <LinearLayout android:id="@+id/lay_record"
                              android:layout_width="match_parent"
                              android:layout_height="80px"
                              android:background="@color/colorListBg"
                              android:gravity="center_vertical"
                    >

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:gravity="center"
                              android:padding="12dp"
                              android:text="成长记录"
                              android:textColor="@color/white"

                              android:textSize="26px"/>

                    <ImageView android:layout_width="40dp"
                               android:layout_height="40dp"
                               android:padding="12dp"
                               android:src="@mipmap/icon_arrow_right"/>


                </LinearLayout>

            </LinearLayout>


            <LinearLayout android:id="@+id/lay_integral"
                          android:layout_width="match_parent"
                          android:layout_height="80px"
                          android:layout_marginTop="8px"
                          android:background="@color/colorListBg"
                          android:gravity="center_vertical"
                >

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:gravity="center"
                          android:padding="12dp"

                          android:text="我的积分"
                          android:textColor="@color/white"
                          android:textSize="26px"/>

                <ImageView android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:padding="12dp"
                           android:src="@mipmap/icon_arrow_right"/>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
