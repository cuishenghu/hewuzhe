<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBg"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lay_top"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginBottom="10px"
        android:layout_marginTop="10px"
        android:background="@color/colorListBg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_search_content"
            android:layout_width="0dp"
            android:layout_height="70px"
            android:layout_marginLeft="30px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="搜索好友昵称"
            android:imeActionId="@+id/edt_search_content_actionid"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textColor="@color/colorLine"
            android:textColorHint="@color/colorLine"/>

        <ImageView
            android:layout_width="70px"
            android:layout_height="70px"
            android:id="@+id/img_search"
            android:layout_marginLeft="10px"
            android:layout_marginRight="50px"
            android:padding="15px"
            android:src="@mipmap/icon_search"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lay_top"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/lay_followed"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/colorListBg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginRight="30dp"
                android:src="@mipmap/icon_new_friends"/>

            <TextView
                style="@style/text_32_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="新关注好友"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_group"
            style="@style/text_35_white"
            android:layout_width="match_parent"
            android:layout_height="85px"
            android:gravity="center_vertical"
            android:paddingLeft="25px"
            android:text="我的战队"/>


        <LinearLayout
            android:id="@+id/lay_group"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/colorListBg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <ImageView
                android:id="@+id/img_group_avatar"
                android:layout_width="85px"
                android:layout_height="85px"
                android:layout_marginRight="30dp"
                android:src="@mipmap/img_avatar"/>

            <TextView
                android:id="@+id/tv_group_name"
                style="@style/text_35_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="战队"/>

        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorListBg">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="20dp"
                android:background="@color/colorBg"/>


        </FrameLayout>

    </LinearLayout>


</RelativeLayout>