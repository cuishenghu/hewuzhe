<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorBg"
              android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="130px"
                        android:layout_marginTop="10px"
                        android:background="@color/colorListBg"
                        android:paddingBottom="15px"
                        android:paddingLeft="20px"
                        android:paddingRight="20px"
                        android:paddingTop="15px">

            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="85px"
                android:layout_height="85px"
                android:src="@mipmap/img_avatar"/>


            <LinearLayout android:id="@+id/lay_menu"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignParentRight="true"
                          android:orientation="horizontal">
                <LinearLayout android:id="@+id/lay_transpond"
                              android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:layout_alignParentRight="true"
                              android:layout_marginBottom="20px"
                              android:layout_marginLeft="20px"
                              android:gravity="center_horizontal"
                              android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_transpond"
                        android:layout_width="35px"
                        android:layout_height="35px"
                        android:src="@mipmap/icon_transpond"/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="8px"
                              android:layout_weight="1"
                              android:gravity="bottom"
                              android:text="转发"
                              android:textColor="@color/white"
                              android:textSize="25px"/>


                </LinearLayout>


                <LinearLayout android:id="@+id/lay_share"
                              android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:layout_marginBottom="20px"
                              android:layout_marginLeft="20px"
                              android:gravity="center_horizontal"
                              android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_share"
                        android:layout_width="35px"
                        android:layout_height="35px"
                        android:src="@mipmap/icon_share_2"/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="8px"
                              android:layout_weight="1"
                              android:gravity="bottom"
                              android:text="分享"
                              android:textColor="@color/white"
                              android:textSize="25px"/>


                </LinearLayout>

                <LinearLayout android:id="@+id/lay_praise"
                              android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:layout_marginBottom="20px"
                              android:layout_marginLeft="20px"
                              android:gravity="center_horizontal"
                              android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_praise"
                        android:layout_width="35px"
                        android:layout_height="35px"
                        android:src="@mipmap/icon_praise"/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="8px"
                              android:layout_weight="1"
                              android:gravity="bottom"
                              android:text="关注"
                              android:textColor="@color/white"
                              android:textSize="25px"/>


                </LinearLayout>

                <LinearLayout android:id="@+id/lay_collect"
                              android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:layout_marginBottom="20px"
                              android:layout_marginLeft="20px"
                              android:layout_toLeftOf="@id/lay_share"
                              android:gravity="center_horizontal"
                              android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_collect"
                        android:layout_width="35px"
                        android:layout_height="35px"
                        android:src="@mipmap/icon_collect"/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="8px"
                              android:layout_weight="1"
                              android:gravity="bottom"
                              android:text="收藏"
                              android:textColor="@color/white"
                              android:textSize="25px"/>


                </LinearLayout>


            </LinearLayout>

            <TextView android:id="@+id/tv_username"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="18px"
                      android:layout_toLeftOf="@id/lay_menu"
                      android:layout_toRightOf="@id/img_avatar"
                      android:singleLine="true"
                      android:text=""
                      android:textColor="@color/white"
                      android:textSize="30px"/>


            <TextView android:id="@+id/tv_add_time"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/tv_username"
                      android:layout_marginBottom="15px"
                      android:layout_marginLeft="28px"
                      android:layout_marginTop="10px"
                      android:layout_toRightOf="@id/img_avatar"
                      android:text="dfs"
                      android:textColor="@color/white"
                      android:textSize="22px"/>

        </RelativeLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@color/colorListBg"
                      android:orientation="vertical">

            <TextView android:layout_width="match_parent"
                      android:layout_height="2px"
                      android:layout_marginLeft="30px"
                      android:background="@color/colorBg"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:orientation="vertical">
                    <TextView android:id="@+id/tv_title"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:background="@color/colorListBg"
                              android:padding="20px"
                              android:text="sdf"
                              android:textColor="@color/white"
                              android:textSize="30px"/>


                    <TextView android:id="@+id/tv_desc"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:background="@color/colorListBg"
                              android:padding="20px"
                              android:text="sdf"
                              android:textColor="@color/white"
                              android:textSize="25px"/>
                </LinearLayout>

                <TextView android:id="@+id/tv_report"
                          style="@style/text_30_white"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_marginRight="10px"
                          android:text="举报"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10px"
                      android:background="@color/colorListBg"
                      android:orientation="vertical">


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="80px"
                          android:background="@color/colorListBg"
                          android:gravity="center_vertical"
                          android:paddingLeft="20px"
                          android:paddingRight="20px">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:text="其他作品"
                          android:textColor="@color/white"
                          android:textSize="30px"/>

                <TextView android:layout_width="2dp"
                          android:layout_height="match_parent"
                          android:layout_marginBottom="15px"
                          android:layout_marginTop="15px"
                          android:background="@color/colorBg"/>

                <TextView android:id="@+id/tv_other_count"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="10px"
                          android:text="共0部"
                          android:textColor="@color/white"
                          android:textSize="30px"/>


            </LinearLayout>
            <TextView android:layout_width="match_parent"
                      android:layout_height="2px"
                      android:layout_marginLeft="30px"
                      android:background="@color/colorBg"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/re_others"
                android:layout_width="match_parent"
                android:layout_height="270px"
                android:layout_marginLeft="30px"
                android:background="@color/colorListBg">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10px"
                      android:background="@color/colorListBg"
                      android:orientation="vertical">


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="80px"
                          android:background="@color/colorListBg"
                          android:gravity="center_vertical"
                          android:paddingLeft="20px"
                          android:paddingRight="20px">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:text="用户评论"
                          android:textColor="@color/white"
                          android:textSize="30px"/>

                <TextView android:layout_width="2dp"
                          android:layout_height="match_parent"
                          android:layout_marginBottom="15px"
                          android:layout_marginTop="15px"
                          android:background="@color/colorBg"/>

                <TextView android:id="@+id/tv_comment_count"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="10px"
                          android:text="共100条"
                          android:textColor="@color/white"
                          android:textSize="30px"/>


            </LinearLayout>

            <TextView android:layout_width="match_parent"
                      android:layout_height="2px"
                      android:layout_marginLeft="30px"
                      android:background="@color/colorBg"/>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="110px"
                          android:layout_marginLeft="30px"
                          android:orientation="horizontal">

                <ImageView android:id="@+id/img_avatar_2"
                           android:layout_width="85px"
                           android:layout_height="85px"
                           android:layout_gravity="center_vertical"
                           android:src="@mipmap/img_avatar"/>
                <EditText android:id="@+id/edt_comment"
                          android:layout_width="match_parent"
                          android:layout_height="70px"
                          android:layout_gravity="center_vertical"
                          android:layout_marginLeft="30px"
                          android:layout_marginRight="10px"
                          android:layout_weight="1"
                          android:background="@color/colorBg"
                          android:hint="我也说两句"
                          android:paddingLeft="10px"
                          android:textColor="@color/white"
                          android:textColorHint="@color/white"
                          android:textSize="30px"/>


                <Button android:id="@+id/btn_publish"
                        style="@style/text_30_white"
                        android:layout_width="130px"
                        android:layout_height="65px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="15px"
                        android:background="@drawable/select_yellow"
                        android:text="发布"/>


            </LinearLayout>
            <TextView android:layout_width="match_parent"
                      android:layout_height="2px"
                      android:layout_marginLeft="30px"
                      android:background="@color/colorBg"/>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>

