<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorBg"
              android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <LinearLayout android:id="@+id/lay_vote"
                      android:layout_width="match_parent"
                      android:layout_height="150px"
                      android:background="@color/colorListBg"
                      android:gravity="center">

            <Button
                android:id="@+id/btn_post"
                style="@style/text_30_white"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:background="@color/colorYellow"
                android:text="点击投票"/>


        </LinearLayout>

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="130px"
                        android:layout_marginTop="10px"
                        android:background="@color/colorListBg"
                        android:paddingBottom="15px"
                        android:paddingLeft="20px"
                        android:paddingRight="20px"
                        android:paddingTop="15px">

            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="85px"
                android:layout_height="85px"
                android:src="@mipmap/img_avatar"/>

            <TextView android:id="@+id/tv_username"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="18px"
                      android:layout_toRightOf="@id/img_avatar"
                      android:text="成龙"
                      android:textColor="@color/white"
                      android:textSize="30px"/>


            <TextView android:id="@+id/tv_add_time"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentBottom="true"
                      android:layout_marginBottom="15px"
                      android:layout_marginLeft="18px"
                      android:layout_marginTop="3px"
                      android:layout_toRightOf="@id/img_avatar"
                      android:text="发布于..."
                      android:textColor="@color/white"
                      android:textSize="25px"/>


            <LinearLayout android:id="@+id/lay_transpond"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:layout_alignParentRight="true"
                          android:layout_marginBottom="20px"
                          android:layout_marginLeft="20px"
                          android:gravity="center_horizontal"
                          android:orientation="vertical">


                <TextView android:id="@+id/tv_total"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="8px"
                          android:layout_weight="1"
                          android:gravity="bottom"
                          android:text="已获得票数：100"
                          android:textColor="@color/white"
                          android:textSize="25px"/>
                <TextView android:id="@id/tv_page_views"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="8px"
                          android:layout_weight="1"
                          android:gravity="bottom"
                          android:text="查看人数：100"
                          android:textColor="@color/white"
                          android:textSize="25px"/>


            </LinearLayout>


        </RelativeLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@color/colorListBg"
                      android:orientation="vertical">


            <TextView android:layout_width="match_parent"
                      android:layout_height="2px"
                      android:layout_marginLeft="30px"
                      android:background="@color/colorBg"/>


            <TextView android:id="@+id/tv_title"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@color/colorListBg"
                      android:padding="20px"
                      android:text="名字：..."
                      android:textColor="@color/white"
                      android:textSize="30px"/>


            <TextView android:id="@+id/tv_desc"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@color/colorListBg"
                      android:padding="20px"
                      android:text="简介：..."
                      android:textColor="@color/white"
                      android:textSize="25px"/>
        </LinearLayout>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10px"
                      android:background="@color/colorListBg"
                      android:orientation="vertical">


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="80px"
                          android:background="@color/colorListBg"
                          android:gravity="center_vertical"
                          android:paddingLeft="20px"
                          android:paddingRight="20px">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:text="用户评论"
                          android:textColor="@color/white"
                          android:textSize="30px"/>

                <TextView android:layout_width="2dp"
                          android:layout_height="match_parent"
                          android:layout_marginBottom="15px"
                          android:layout_marginTop="15px"
                          android:background="@color/colorBg"/>

                <TextView android:id="@+id/tv_comment_count"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="10px"
                          android:text="共100条"
                          android:textColor="@color/white"
                          android:textSize="30px"/>


            </LinearLayout>

            <TextView android:layout_width="match_parent"
                      android:layout_height="2px"
                      android:layout_marginLeft="30px"
                      android:background="@color/colorBg"/>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="110px"
                          android:layout_marginLeft="30px"
                          android:orientation="horizontal">

                <ImageView android:id="@+id/img_avatar_2"
                           android:layout_width="85px"
                           android:layout_height="85px"
                           android:layout_gravity="center_vertical"
                           android:src="@mipmap/img_avatar"/>
                <EditText android:id="@+id/edt_comment"
                          android:layout_width="match_parent"
                          android:layout_height="70px"
                          android:layout_gravity="center_vertical"
                          android:layout_marginLeft="30px"
                          android:layout_marginRight="10px"
                          android:layout_weight="1"
                          android:background="@color/colorBg"
                          android:hint="我也说两句"
                          android:paddingLeft="10px"
                          android:textColor="@color/white"
                          android:textColorHint="@color/white"
                          android:textSize="30px"/>


                <Button android:id="@+id/btn_publish"
                        style="@style/text_30_white"
                        android:layout_width="130px"
                        android:layout_height="65px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="15px"
                        android:background="@drawable/select_yellow"
                        android:text="发布"/>


            </LinearLayout>
            <TextView android:layout_width="match_parent"
                      android:layout_height="2px"
                      android:layout_marginLeft="30px"
                      android:background="@color/colorBg"/>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>

