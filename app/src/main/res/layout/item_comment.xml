<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorListBg"
              android:orientation="vertical">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15px"
                    android:layout_marginRight="20px"
                    android:paddingLeft="30px"
                    android:layout_marginTop="10px">

        <ImageView android:id="@+id/img_avatar"
                   android:layout_width="85px"
                   android:layout_height="85px"
                   android:layout_marginRight="10px"
                   android:src="@mipmap/img_avatar"/>

        <TextView android:id="@+id/tv_name"
                  style="@style/text_30_white"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5px"
                  android:layout_toRightOf="@id/img_avatar"
                  android:text="鹿晗"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_marginTop="5px"
                      android:orientation="horizontal">
            <TextView android:id="@+id/tv_praise_count"
                      style="@style/text_25_white"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:layout_marginRight="10px"
                      android:layout_toRightOf="@id/img_avatar"
                      android:text="20"/>
            <ImageView android:id="@+id/img_praise"
                       android:layout_width="25px"
                       android:layout_height="25px"
                       android:layout_gravity="center_vertical"
                       android:src="@mipmap/icon_praise"/>


        </LinearLayout>

        <TextView android:id="@+id/tv_content"
                  style="@style/text_25_white"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/tv_name"
                  android:layout_marginTop="8px"
                  android:lineSpacingExtra="2dp"

                  android:layout_toRightOf="@id/img_avatar"
                  android:text="鹿晗鹿晗鹿晗鹿晗鹿晗鹿晗鹿晗鹿晗鹿晗鹿晗鹿晗鹿晗鹿晗鹿晗鹿晗鹿晗鹿晗鹿晗鹿晗鹿晗鹿晗鹿晗鹿晗鹿晗鹿晗鹿晗鹿晗鹿晗"/>


        <TextView style="@style/text_25_colorLine"
                  android:layout_width="wrap_content"
                  android:id="@+id/tv_add_time"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_below="@id/tv_content"
                  android:layout_gravity="center_vertical"
                  android:layout_marginRight="10px"
                  android:text="刚刚发布"/>

    </RelativeLayout>

    <TextView android:layout_width="match_parent"
              android:layout_marginTop="10px"
              android:layout_marginLeft="30px"
              android:background="@color/colorBg"
              android:layout_height="2px"/>





</LinearLayout>