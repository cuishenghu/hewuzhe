<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorListBg"
                android:orientation="vertical">


    <LinearLayout android:id="@+id/lay_item_indexview_catalog"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_item_indexview_catalog"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_color_bg"
            android:gravity="center"
            android:text="A"
            android:textColor="@color/white"
            android:textSize="17sp"
            />

    </LinearLayout>


    <RelativeLayout android:id="@+id/lay_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lay_item_indexview_catalog"
                    android:layout_margin="16px">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@mipmap/img_avatar"
            />

        <TextView android:id="@+id/tv_username"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="20px"
                  android:layout_marginTop="10px"
                  android:layout_toRightOf="@id/img_avatar"
                  android:text="李小龙"
                  android:textColor="@color/white"
                  android:textSize="28px"/>

        <TextView android:id="@+id/tv_level"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/tv_username"
                  android:layout_marginLeft="20px"
                  android:layout_marginTop="16px"
                  android:layout_toRightOf="@id/img_avatar"
                  android:text="等级：lv1"
                  android:textColor="@color/white"
                  android:textSize="28px"
                  android:visibility="gone"/>


    </RelativeLayout>

    <TextView android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_below="@id/lay_content"
              android:layout_marginLeft="100px"
              android:background="@color/colorBg"/>
</RelativeLayout>