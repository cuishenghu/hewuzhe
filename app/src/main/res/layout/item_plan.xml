<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent" android:layout_height="220px"
                android:background="@color/colorBg">


    <CheckBox
        android:id="@+id/cb_plan"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8px"
        android:background="@drawable/icon_cb_selector_two"
        android:button="@null"
        android:visibility="gone"
        tools:visibility="visible"/>


    <ImageView
        android:id="@+id/img_circle"
        android:layout_width="16px"
        android:layout_height="16px"
        android:layout_marginLeft="46px"
        android:layout_marginTop="45px"
        android:src="@drawable/circle_black"/>

    <TextView android:id="@+id/tv_plan_time"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="30px"
              android:layout_marginTop="15px"
              android:layout_toRightOf="@id/img_circle"
              android:text="刚刚发布"
              android:textColor="@color/colorListBg"
              android:textSize="28px"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_plan_time"
        android:layout_marginLeft="15px"
        android:layout_marginRight="5px"
        android:layout_toRightOf="@id/img_circle"
        app:cardBackgroundColor="@color/colorListBg"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:paddingBottom="12px"
                      android:paddingLeft="12dp"
                      android:paddingRight="12dp"
                      android:paddingTop="12dp">

            <TextView android:id="@+id/tv_title"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="早晨跑步30分钟"
                      android:textColor="@color/white"
                      android:textSize="30px"/>


            <TextView android:id="@+id/tv_conent"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="15px"
                      android:lineSpacingExtra="2dp"
                      android:maxLines="2"
                      android:text="早晨跑步锻炼"
                      android:textColor="@color/white"
                      android:textSize="26px"/>


            <TextView android:id="@+id/tv_add_time"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="15px"
                      android:gravity="right"
                      android:maxLines="2"
                      android:text="9:00发布"
                      android:textColor="@color/colorLine"
                      android:textSize="26px"/>


        </LinearLayout>


    </android.support.v7.widget.CardView>

    <TextView android:layout_width="2px"
              android:layout_height="220px"
              android:layout_marginLeft="53px"
              android:background="@color/colorPrimary"/>


</RelativeLayout>