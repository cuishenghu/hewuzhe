<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_recomm_dongtai"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorListBg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingTop="3dp">

        <com.hewuzhe.view.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/img_avatar" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="***"
            android:textColor="@color/grey_text" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorListBg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_dongtai_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/icon_top_pic" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_dongtai_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:text="欢迎大家观看"
        android:textColor="@color/grey_text"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/tv_dt_like_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/icon_focus_normal"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="1000"
            android:textColor="@color/grey_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_dt_comment_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/icon_msg"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="100"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>