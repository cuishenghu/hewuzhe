<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_recomm_friend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorListBg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16px">

        <com.hewuzhe.view.CircleImageView
            android:id="@+id/img_recomm_avatar"
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@mipmap/img_avatar" />

        <TextView
            android:id="@+id/tv_recomm_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="10px"
            android:layout_toRightOf="@id/img_recomm_avatar"
            android:text="李小龙"
            android:textColor="@color/white"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_recomm_come"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_recomm_username"
            android:layout_marginLeft="20px"
            android:layout_marginTop="16px"
            android:layout_toRightOf="@id/img_recomm_avatar"
            android:text="AKF推荐"
            android:textColor="@color/grey_text"
            android:textSize="22px" />

        <TextView
            android:id="@+id/tv_add_friend"
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/colorLine"
            android:gravity="center"
            android:paddingBottom="12px"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:paddingTop="12px"
            android:text="添加好友"
            android:textColor="@color/white"
            android:textSize="22px" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="100px"
        android:background="@color/colorBg" />


</LinearLayout>